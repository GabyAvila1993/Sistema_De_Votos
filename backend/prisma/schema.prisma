generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model candidate {
  id         Int      @id @default(autoincrement())
  name       String
  electionId Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  election   election @relation(fields: [electionId], references: [id], onDelete: Cascade, map: "Candidate_electionId_fkey")
  vote       vote[]

  @@index([electionId], map: "Candidate_electionId_fkey")
}

model election {
  id        Int             @id @default(autoincrement())
  name      String
  date      DateTime
  status    election_status @default(upcoming)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @default(now())
  candidate candidate[]
  vote      vote[]
}

model user {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique(map: "User_email_key")
  password  String
  role      user_role @default(VOTER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
}

model vote {
  id          Int       @id @default(autoincrement())
  voterId     Int
  electionId  Int
  candidateId Int
  timestamp   DateTime  @default(now())
  candidate   candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade, map: "Vote_candidateId_fkey")
  election    election  @relation(fields: [electionId], references: [id], onDelete: Cascade, map: "Vote_electionId_fkey")
  voter       voter     @relation(fields: [voterId], references: [id], onDelete: Cascade, map: "Vote_voterId_fkey")

  @@unique([voterId, electionId], map: "Vote_voterId_electionId_key")
  @@index([candidateId], map: "Vote_candidateId_idx")
  @@index([electionId], map: "Vote_electionId_idx")
}

model voter {
  id        Int        @id @default(autoincrement())
  name      String
  dni       String     @unique(map: "Voter_dni_key")
  role      voter_role @default(votar)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now())
  vote      vote[]
}

enum election_status {
  upcoming
  active
  closed
}

enum voter_role {
  admin
  operador
  votar
}

enum user_role {
  ADMIN
  VOTER
}
